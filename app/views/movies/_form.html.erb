<%= form_for @movie, :html => { :class => "class-for-your-form" } do |f| %>
<%= f.label :title, "Name of movie", :class => "class-for-your-label"%>
<%= f.text_field :title, :class => "class-for-your-text-field"%><br>

<div>
<%= f.label :description, "Description", :class => "class-for-your-label"%>
<%= f.text_field :description, :class => "class-for-your-text-field"%><br>
</div>

<div>
	<%= f.label :year_released, "Year Released", :class => "class-for-your-label"%>
<%= f.text_field :year_released, :class => "class-for-your-text-field"%><br>
</div>

<%= f.submit "Add a movie!" %>
<% end %>


